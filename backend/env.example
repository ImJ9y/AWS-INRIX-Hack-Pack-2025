# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_ACCOUNT_ID=your_account_id_here
AWS_DEFAULT_REGION=us-east-1

# Fall Detection Configuration
DEFAULT_CAMERA_ID="fall-detection-cam"
DEFAULT_ZONE="A"
FALL_THRESHOLD_VELOCITY="0.3"
FALL_THRESHOLD_ANGLE="45"
EMERGENCY_SEVERITY_THRESHOLD="8"
VERIFICATION_TIME_SECONDS="5.0"

# AWS SNS Topics (replace with your actual ARNs)
AWS_SNS_EMERGENCY_TOPIC_ARN="arn:aws:sns:us-east-1:YOUR_ACCOUNT_ID:fall-detection-emergency-dev"
AWS_SNS_NOTIFICATION_TOPIC_ARN="arn:aws:sns:us-east-1:YOUR_ACCOUNT_ID:fall-detection-notifications-dev"
AWS_SNS_CRITICAL_TOPIC_ARN="arn:aws:sns:us-east-1:YOUR_ACCOUNT_ID:fall-detection-critical-dev"

# AWS S3 Bucket (replace with your actual bucket name)
AWS_S3_EMERGENCY_BUCKET="fall-detection-emergency-data-dev-YOUR_ACCOUNT_ID"

# AWS DynamoDB Tables (replace with your actual table names)
AWS_DYNAMODB_EVENTS_TABLE="fall-detection-events-dev"
AWS_DYNAMODB_ANALYTICS_TABLE="fall-detection-analytics-dev"
AWS_DYNAMODB_DAILY_ANALYTICS_TABLE="fall-detection-daily-analytics-dev"
AWS_DYNAMODB_INSIGHTS_TABLE="fall-detection-insights-dev"
AWS_DYNAMODB_TRACKING_TABLE="fall-detection-emergency-tracking-dev"

# AWS CloudWatch
AWS_CLOUDWATCH_METRICS_NAMESPACE="FallDetectionSystem"

# AWS Lambda Functions (replace with your actual function names)
AWS_LAMBDA_EMERGENCY_PROCESSOR_FUNCTION_NAME="fall-detection-emergency-processor-dev"
AWS_LAMBDA_ANALYTICS_PROCESSOR_FUNCTION_NAME="fall-detection-analytics-processor-dev"

# Emergency Contacts
EMERGENCY_CONTACT_EMAIL="your-email@example.com"
EMERGENCY_CONTACT_PHONE="+15551234567"
